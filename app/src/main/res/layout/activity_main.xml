<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:visibility="visible">
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ratingBar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView6"/>
    <TextView
            android:text="@string/_6"
            android:layout_width="67dp"
            android:layout_height="52dp" android:id="@+id/Num1"
            android:textStyle="bold" android:textSize="30sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toTopOf="@+id/input"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" app:layout_constraintVertical_bias="0.477"
            app:layout_constraintEnd_toStartOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.6" android:gravity="center_horizontal|center_vertical"/>
    <TextView
            android:text="@string/_5"
            android:layout_width="67dp"
            android:layout_height="52dp" android:id="@+id/Num2"
            android:textSize="30sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            app:layout_constraintBottom_toTopOf="@+id/input" app:layout_constraintVertical_bias="0.477"
            app:layout_constraintStart_toEndOf="@+id/textView6" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.38" android:gravity="center_horizontal|center_vertical"/>
    <TextView
            android:text="@string/x"
            android:layout_width="67dp"
            android:layout_height="52dp" android:id="@+id/textView6"
            android:textSize="24sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:gravity="center_horizontal|center_vertical"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.711"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:autofillHints=""/>
    <Button
            android:text="@string/resultado"
            android:layout_width="408dp"
            android:layout_height="52dp" android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/input"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.265"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp" android:textStyle="bold" android:onClick="iniciar_OnClick"/>
</androidx.constraintlayout.widget.ConstraintLayout>